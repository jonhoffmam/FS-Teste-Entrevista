@model WebAtividadeEntrevista.Models.ClienteModel
<form id="formCadastro" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Nome)
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", placeholder = "Ex.: João" })
                @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Sobrenome)
                @Html.TextBoxFor(m => m.Sobrenome, new { @class = "form-control", placeholder = "Ex.: da Silva" })
                @Html.ValidationMessageFor(m => m.Sobrenome, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.CPF)
                @Html.TextBoxFor(m => m.CPF, new { @class = "form-control", placeholder = "Ex.: 010.011.111-00", data_mask = "CPF" })
                @Html.ValidationMessageFor(m => m.CPF, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Nacionalidade)
                @Html.TextBoxFor(m => m.Nacionalidade, new { @class = "form-control", placeholder = "Ex.: brasileira" })
                @Html.ValidationMessageFor(m => m.Nacionalidade, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.CEP)
                @Html.TextBoxFor(m => m.CEP, new { @class = "form-control", placeholder = "Ex.: 01011-100", data_mask = "CEP" })
                @Html.ValidationMessageFor(m => m.CEP, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.Estado)
                @Html.DropDownListFor(m => m.Estado, (IEnumerable<SelectListItem>)ViewBag.Estados, "Selecione", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Estado, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.Cidade)
                @Html.TextBoxFor(m => m.Cidade, new { @class = "form-control", placeholder = "Ex.: São Paulo" })
                @Html.ValidationMessageFor(m => m.Cidade, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Logradouro)
                @Html.TextBoxFor(m => m.Logradouro, new { @class = "form-control", placeholder = "Ex.: Rua Boa Vista 253" })
                @Html.ValidationMessageFor(m => m.Logradouro, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Ex.: email@email.com" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Telefone)
                @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control", placeholder = "Ex.: (11) 2020-3030", data_mask = "Telefone" })
                @Html.ValidationMessageFor(m => m.Telefone, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="pull-left">
                <button id="beneficiarios" type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#beneficiariosModal">Beneficiários</button>
            </div>
            <div class="pull-right">
                <button type="submit" class="btn btn-sm btn-success">Salvar</button>
                @Html.ActionLink("Voltar", "Index", "Cliente", new { }, new { @class = "btn btn-sm btn-danger" })
            </div>
        </div>
    </div>


</form>
